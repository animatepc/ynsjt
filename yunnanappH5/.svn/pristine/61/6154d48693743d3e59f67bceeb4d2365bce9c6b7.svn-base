<script>
import { HttpService } from "../../services/http.js";
import { coreApi } from "../../services/coreApi.js";
export default {
  data() {
    return {
      newMsg: [
        // {'news':1},
      ],
      recordHist: null,
      hide_alert: false,
      test_mag: "确定清空历史记录 ?"
    };
  },
  mounted() {
    this.getMyRecordHistList();
  },
  methods: {
    city_back() {
      this.$router.go(-1);
    },
    username_ready() {
      this.hide_alert = !this.hide_alert;
    },
    onConfirm() {
      //清空ajax
      // 请求data
      let bodys = {
        //mobile:this.idCode.phone.replace(/\s+/g,''),
        _json: false, //参数类型 formdata/json
        _jsonp: true, //dataType: jsonp true/false
        _jsonpCallback: "onBack" //请求接口返回的callback
      };
      // 调用gloabApi的api 参数是bodys r 接口返回的数据对象
      coreApi.clearAllHistory(bodys).then(r => {
        if (r.statusCode == "200" && r.status) {
          // 暂无提示
          //alert("接口调用成功");
          console.log("清空成功");
          this.getMyRecordHistList();
        } else {
          alert("清空失败");
          console.log("清空失败");
        }
      });
    },
    onCancel() {
      console.log("已取消");
    },
    SetUserhead() {
      this.$router.push({
        path: "/mymodule/setheadphoto"
      });
    },
    SetUsername() {
      this.$router.push({
        path: "/mymodule/setusername"
      });
    },
    //ajax请求数据
    //获取我的收藏列表
    getMyRecordHistList() {
      // 请求data
      let bodys = {
        //mobile:this.idCode.phone.replace(/\s+/g,''),
        _json: false, //参数类型 formdata/json
        _jsonp: true, //dataType: jsonp true/false
        _jsonpCallback: "onBack" //请求接口返回的callback
      };
      // 调用gloabApi的api 参数是bodys r 接口返回的数据对象
      coreApi.getMyRecordHistList(bodys).then(r => {
        this.recordHist = r.count;
        var data = r.list;
        for (var i = 0; i < data.length; i++) {
          switch (data[i].contentType) {
            case "30":
              data[i]["type"] = "tab_video";
              break;
            case "10":
              data[i]["type"] = "list";
              break;
            case "60":
              data[i]["type"] = "tab";
              break;
            case "50":
              data[i]["type"] = "tablist";
              break;
          }
        }
        this.newMsg = data;
        console.log("接口调用成功");
      });
    }
  }
};
</script>
