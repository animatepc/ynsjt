<template>
	<div class="atlasDetails">
		<div class="searchVal _cus_flexContent _cus_fleAlignCen">
            <span class="search_back" @click="cityBack"></span>
            <span class="city_text"><span class="mypreview_indexs">{{indexs}}</span>/{{imgList.length - 1}}</span>
            <!-- <span class="">  {{indexs}}</span> -->
        </div>
      
        <div v-if="imgList.length > 0" class="swiper_content">
        	<swiper :list="imgList" :show-dots="false" height="100vh" @on-index-change="swiperChange">
				 
			</swiper>
        </div>
	</div>
</template>

<script>
	import { HttpService } from "../../services/http.js";
    import { newsApi } from '../../services/newsapi.js'
	export default {
		data(){
			return{	
				indexs:1,
				imgList:[]
			}
		},
		mounted(){
			this.getNewsList()
        },
        watch:{
            indexs(newVal,oldVal){
                if(newVal == 5){
                    this.$router.push({
                        'path':'/public/atlasextend'
                    })
                }
            }
        },
		methods:{
			getNewsList(){
                let params = this.$router.history.current.query
                params = Object.assign(params,{
                    _jsonp:true,
					_jsonpCallback:'onBack'
                })
                newsApi.getNewsDetails(params).then(r=>{
                    if(r.status && r.statusCode == '200'){
						let imgObj = r.list;
						this.imglength = imgObj.length
						imgObj.map(i=>{
                            i.img = i.atlasPhoto;
                            i.title=i.photoInstructions;
						})
                        this.imgList  = imgObj
                        this.imgList.push({'img':'javascript:;'})
                    }else{
                        this.imgList = []
					}
					console.log(this.imgList)
                })
            },
			cityBack(){
				this.$router.go(-1)
			},
			swiperChange(index){
				this.indexs = index+1
			}
		}
	}
</script>

