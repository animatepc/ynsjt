    <template>
	<div class="screen_city">
        <div class="searchVal _cus_flexContent _cus_fleAlignCen">
            <span class="search_back" @click="city_back"></span>
            <span class="colorfff city_text">切换城市</span>
        </div>
        <!-- 搜索内容 -->
        <div class="search_content" style="background: #fff;">
            <scroller
                :lock-x="true"
                :scrollbarY="true"
                :bounce="true"
                style="height: calc(100vh - 1rem);z-index: 2;">
                <ul class="city_list _cus_overHidden">
                    <li v-for="(item,keys) in list"  :key="keys" @click="search(item)">{{item.areaName}}</li>
                </ul>
            </scroller>
        </div>
    </div>
</template>

<script> 
    import { mapMutations } from 'vuex'
    import { newsApi } from '../../services/newsApi.js'
	export default {
        data(){
            return {
                list:[]
            }
        },
        beforeRouteLeave(to, from, next) {
        if (to.path == "/system/home") {
            to.meta.keepAlive = false;
        } else {
            to.meta.keepAlive = true;
        }
            next();
        },
        mounted(){
            this.getList();
        }, 
		methods:{
            ...mapMutations({
    			setCityObj:'saveCityObj'
    		}),
            getList(){
                var bodys = {
                    _jsonp:true,
                    _jsonpCallback:'onBack'
                }
                newsApi.areaList(bodys).then( r =>{
                       
                    if(r.statusCode == '200' && r.status){
                        // 接口访问成功，执行
                        this.list = r.list;//地区列表
                    }else if(!r.status){
                        // 返回错误信息
                        this.list = []
                    }
                }) 
                
            },
			city_back(){
				this.$router.go(-1)
			},
            //点击地搜索
            search(data){
                
                this.$router.push({
                    'path':'/system/home'
                })
                this.setCityObj(data)
            }
		}
	}
</script>

