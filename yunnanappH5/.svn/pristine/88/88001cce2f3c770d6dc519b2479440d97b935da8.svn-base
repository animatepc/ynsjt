            <span class="colorfff city_text">历史记录<span v-show="recordHist > 0">{{recordHist}}</span></span>
            <span class="username_ready" @click="username_ready">清空</span>
        </div>
        <div class="newsMessage_content" style="background: #fff;">
           <scroller @pullDown="selPulldown" @pullUp="selPullup" :scrollerMsg="scrollerMsg" ref="scroller">
               <div>
                <span class="newsMessage_notime" v-if="!newMsg.length">您还没有留下过足迹哦~</span>
                 <ul class="video_list _cus_overHidden">
	                    <li v-for="(item,keys) in newMsg" :key="keys" class="_cus_flexContent"  @click="Details_back(item)">
	                        <div class="_cus_overHidden __cus_fl _cus_flex1 _cus_posRelative" >
                                <span v-show="item.type =='tab'" class="source-handle-title">专题</span>
	                            <label class="source-label">{{item.listTitle}}</label>
                                 <div class="tabImg" v-show="item.type =='tab' || item.type =='tabVideo'" :class="item.type=='tabList'?'_cus_posRelative':''">
	                                <img class="" :src="item.urlList[0]" alt="">
	                                <i class="video_playicon" v-show="item.type =='tabVideo'"></i>
	                            </div>
	                              <div v-show="item.type == 'tabTranslate'" class="_cus_overHidden tabTranslate">
                                    <ul class="" style="display:flex;justify-content:space-between">
                                        <li v-for="(img,keys) in item.urlList" :key="keys" >
                                            <img :src="img" alt="" style="width:2.1rem;height:1.44rem">
                                        </li>
                                    </ul>
