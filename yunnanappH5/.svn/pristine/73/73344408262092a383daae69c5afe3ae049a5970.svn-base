                newsdetails_msg:{},
                newslists:[]
            }
        },
        mounted(){
        	this.getNewsList()
        },
        methods:{
            getNewsList(){
                let params = this.$router.history.current.query
                params = Object.assign(params,{
                    _jsonp:true,
                    _jsonpCallback:'onBack'
                })
                newsApi.getNewsDetails(params).then(r=>{
                    if(r.status && r.statusCode == '200'){
                        this.newsdetails_msg = r.data
                        let data  = r.data.contentList
                        for (var i = 0; i < data.length; i++) {
                            console.log(data[i].contentType)
                            switch(data[i].contentType){
                                case '30':
									path = '/videodetails' 
								break;
								case '10':
									path = '/newsdetails' 
								break;
								case '20':
									path = '/atlasdetails  ' 
								break;
								case '40':
									path = '/audiodetails' 
								break;
								case '60':  
									path = '/specialdetails'
								break;
								case '50':
									path = '/newsdetails' 
								break;
                            }
                        }
                        this.newslists = data
                    }else{
                        this.newsdetails_msg = {}
                    }
                })
            },
            city_back(){
                this.$router.go(-1)
			},
			Details_back(items){
                 let data = items.contentType;
                let path = '';
                 switch(data){
                    case '30':
                        path = '/videodetails' 
                    break;
                    case '10':
                         path = '/newsdetails'
                    break;
                    case '20':
                         path = '/atlasdetails' 
                    break;
                    case '40':
                         path = '/audiodetails' 
                    break;
                    case '60':  
                         path = '/specialdetails'
                    break;
                    case '50':
                         path = '/newsdetails' 
                    break;
                }
                let Json = {
                    refType:items.contentType,
                    id: items.id,
                    columnCode:items.columnCode,
				};
				this.getNewsList()
                this.$router.push({
                    'path':`/public${path}`,
                    query:Json
                })
            }
        }
    }
