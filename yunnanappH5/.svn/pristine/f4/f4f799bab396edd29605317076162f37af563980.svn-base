<script>
import { mapMutations, mapState } from "vuex";
export default {
  props: ["scrollerMsg", "dataList", "newsList", "setHeight", "types"],
  computed: {
    ...mapState(["imgObj"])
  },
  methods: {
    selPullDown() {
      setTimeout(() => {
        this.scrollerMsg.scrollerStatus.pulldownStatus = "disabled";
        this.$nextTick(() => {
          this.scrollerMsg.scrollerStatus.pulldownStatus = "disabled"
            ? (this.scrollerMsg.scrollerStatus.pulldownStatus = "default")
            : "";
          this.$refs.scroller.reset();
        });
        this.$emit("pullDown", {
          i: this.scrollerMsg.PageIndex
        });
      }, 1000);
    },
    selPullUp() {
      this.scrollerMsg.PageIndex++;
      this.$emit("pullUp", {
        i: this.scrollerMsg.PageIndex
      });
    },
    Details_back(items) {
      let data = items.contentType;
      let path = "";
      switch (data) {
        case "30":
          path = "/videodetails";
          break;
        case "10":
          path = "/newsdetails";
          break;
        case "20":
          path = "/atlasdetails";
          break;
        case "40":
          path = "/audiodetails";
          break;
        case "60":
          path = "/specialdetails";
          break;
        case "50":
          //  path = '/videochannel'
          path = "/programdetails";
          break;
      }
      let Json = {
        refType: items.contentType,
        id: items.id,
        columnCode: items.columnCode
      };
      this.$router.push({
        path: `/public${path}/${items.id}`,
        query: Json
      });
    },
    reset() {
      this.$refs.scroller.reset();
    },
    ...mapMutations({
      setImgArr: "saveImgInfo"
    }),
    img_back(Obj) {
      this.$nextTick(() => {
        this.setImgArr(Obj);
        this.$router.push({
          path: "/myphoto/mypreview"
        });
      });
    },
    clearMsg(item){
      this.$emit('clearMsg',item)
    }
  }
};
